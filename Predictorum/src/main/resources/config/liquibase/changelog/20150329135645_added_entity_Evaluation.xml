<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity Evaluation.
    -->
    <changeSet id="20150329135645" author="jhipster">
        <createTable tableName="T_EVALUATION">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="type" type="bit"/>
            <column name="actor_id" type="bigint"/>
            <column name="comment_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="actor_id"
                                 baseTableName="T_EVALUATION"
                                 constraintName="fk_evaluation_actor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_ACTOR"/>

        <addForeignKeyConstraint baseColumnNames="comment_id"
                                 baseTableName="T_EVALUATION"
                                 constraintName="fk_evaluation_comment_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_COMMENT"/>

    </changeSet>
</databaseChangeLog>
