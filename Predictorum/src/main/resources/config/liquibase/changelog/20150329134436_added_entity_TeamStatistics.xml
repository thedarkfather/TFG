<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity TeamStatistics.
    -->
    <changeSet id="20150329134436" author="jhipster">
        <createTable tableName="T_TEAMSTATISTICS">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="streak" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="won_match_percentage" type="integer"/>
            <column name="lost_match_percentage" type="integer"/>
            <column name="drawn_match_percentage" type="integer"/>
            <column name="more_than25_percentage" type="integer"/>
            <column name="won_half_match_percentage" type="integer"/>
            <column name="lost_half_match_percentage" type="integer"/>
            <column name="draw_half_match_percentage" type="integer"/>
            <column name="home_won_matches" type="integer"/>
            <column name="away_won_matches" type="integer"/>
            <column name="league_position" type="integer"/>
            <column name="league_points" type="integer"/>
            <column name="team_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="team_id"
                                 baseTableName="T_TEAMSTATISTICS"
                                 constraintName="fk_teamstatistics_team_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_TEAM"/>

    </changeSet>
</databaseChangeLog>
