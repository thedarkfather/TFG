<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity Actor.
    -->
    <changeSet id="20150329133742" author="jhipster">
        <createTable tableName="T_ACTOR">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sr_points" type="integer"/>
            <column name="dr_points" type="integer"/>
            <column name="s_hrpoints" type="integer"/>
            <column name="d_hrpoints" type="integer"/>
            <column name="h_gpoints" type="integer"/>
            <column name="a_gpoints" type="integer"/>
            <column name="h_hgpoints" type="integer"/>
            <column name="h_agpoints" type="integer"/>
            <column name="m_t25_points" type="integer"/>
            <column name="owner_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="owner_id"
                                 baseTableName="T_ACTOR"
                                 constraintName="fk_actor_owner_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_USER"/>

    </changeSet>
</databaseChangeLog>
